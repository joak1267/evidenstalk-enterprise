{
  "name": "evidenstalk-enterprise",
  "productName": "eVidensTalk Enterprise",
  "version": "1.2.0",
  "description": "Infraestructura de Evidencia Digital y Auditoría Forense",
  "main": "electron/main.js",
  "private": true,
  "author": {
    "name": "Joa Tech",
    "email": "soporte@evidenstalk.com"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.evidenstalk.enterprise",
    "productName": "eVidensTalk Enterprise",
    "copyright": "Copyright © 2026 eVidensTalk Security",
    "directories": {
      "output": "dist-app",
      "buildResources": "src/assets"
    },
    "files": [
      "dist-web/**/*",
      "electron/**/*",
      "package.json",
      "src/assets/**/*"
    ],
    "asarUnpack": [
      "**/*.node",
      "**/ffmpeg-static/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/evidens.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/evidens.ico",
      "uninstallerIcon": "src/assets/evidens.ico",
      "installerHeaderIcon": "src/assets/evidens.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "eVidensTalk Enterprise",
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "date-fns": "^4.1.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-machine-id": "^1.1.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "wait-on": "^9.0.3",
    "wavefile": "^11.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@eslint/js": "^9.17.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "vite": "^6.0.5"
  }
}